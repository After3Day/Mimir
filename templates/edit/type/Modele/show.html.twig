<h4 class="center-align">Nouveau Modèle</h4>

<div class="row ">
  <hr class="col s6 offset-s3">
</div>

{{ form_start(formModele, {'action': path('create_modele'), 'method': 'POST' }) }}

<h5>Marque</h5>
<div class="row">
  <div class="col s11">
    {{ form_row(formModele.brand) }}
  </div>
  <a id="addMarque" class="btn-floating modal-trigger" href="#addMar"><i class="material-icons">add</i></a>
</div>

<br><br>

<h5>Modèle</h5>
{{ form_row(formModele.modele) }}

<br><br>

<h5>Versions</h5>
<ul class="versions" data-prototype="{{ form_widget(formModele.versions.vars.prototype)|e('html_attr') }}">
  {% for version in formModele.versions %}
  {% endfor %}
</ul>

<br><br>


<h5>Designers</h5>
<div class="row">
  <div class="col s11">
    {{ form_row(formModele.designers) }}
  </div>
  <a id="addDesigner" class="btn-floating modal-trigger" href="#addDes"><i class="material-icons">add</i></a>
</div>
<div id="DesAdd"></div>
<input id="DesAddId" type="hidden" name="DesAddId" value="">

<br><br>

<h5>Collectionneurs</h5>
<div class="row">
  <div class="col s11">
    {{ form_row(formModele.collectors) }}
  </div>
  <a id="addCollector" class="btn-floating modal-trigger" href="#addCol"><i class="material-icons">add</i></a>
</div>
<div id="ColAdd"></div>
<input id="ColAddId" type="hidden" name="ColAddId" value="">

<br><br>

  <h5 class="card-subtitle">Sources : </h5>
  {% for media in result.medias %}
    <hr class="red-hr">
    <ul class="collapsible">
      <li>
        <div class="collapsible-header"><span class="card-subtitle">{{loop.index}} : {{ media.name }}</span></div>
        <div class="collapsible-body">
          <ul class="list-group list-group-flush">
            {% if media.type %}
              <li class="list-group-item">Type : {{ media.type }}</li>
            {% endif %}
            {% if media.name %}
              <li class="list-group-item"><h6 class="mb-1">Nom : </h6>{{ media.name }}</li>
            {% endif %}
            {% if media.number %}
              <li class="list-group-item"><h6 class="mb-1">N° : </h6>{{ media.number }}</li>
            {% endif %}
            {% if media.repertory %}
              <li class="list-group-item"><h6 class="mb-1">Date de sortie : </h6>{{ media.releaseDate|date("m/d/Y") }}</li>
            {% endif %}
            {% if media.repertory %}
              <li class="list-group-item"><h6 class="mb-1">Auteur : </h6>{{ media.author }}</li>
            {% endif %}
            {% if media.webLink %}
              <li class="list-group-item"><h6 class="mb-1">Lien : </h6>{{ media.webLink }}</li>
            {% endif %}
            {% if media.repertory %}
              <li class="list-group-item"><h6 class="mb-1">Répertoire : </h6>{{ media.repertory }}</li>
            {% endif %}
            {% if media.language %}
              <li class="list-group-item"><h6 class="mb-1">Langue : </h6>{{ media.language }}</li>
            {% endif %}
          </ul>
        </div>
      </li>
    </ul>
  {% endfor %}

{{ form_row(formModele.save) }}

{{ form_end(formModele) }}

<div id="addMar" class="modal">
  <div class="modal-content" id="Modal_Marque">
  </div>
  <div class="modal-footer">
    <a id="AddDbbMar" class="btn waves-effect modal-close waves-test waves-light" formnovalidate>Ajouter</a>
  </div>
</div>

<div id="addDes" class="modal">
  <div class="modal-content" id="Modal_Designer">
  </div>
  <div class="modal-footer">
    <a id="AddDbbDes" class="btn waves-effect modal-close waves-test waves-light" formnovalidate>Ajouter</a>
  </div>
</div>

<div id="addCol" class="modal">
  <div class="modal-content" id="Modal_Collector">
  </div>
  <div class="modal-footer">
    <button id="AddDbbCol" class="btn waves-effect modal-close waves-test waves-light" formnovalidate>Ajouter</button>
  </div>
</div>

<div id="addMed" class="modal">
  <div class="modal-content" id="Modal_Media">
  </div>
  <div class="modal-footer">
    <button id="AddDbbMed" class="btn waves-effect modal-close waves-test waves-light" formnovalidate>Ajouter</button>
  </div>
</div>


<script type="text/javascript" src="{{ asset('js/create2.js') }}"></script>


