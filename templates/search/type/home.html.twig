{% extends 'base.html.twig' %}
{% block body %}

  <div class="">
    <h1 class="center">Mimir</h1>
      <div class="row">
    <div class="col s12 ">
      <div class="row">
        <div class="input-field col s12">
          <select id="selTest">
            <option value="0" disabled selected>Choisir une option</option>
            <option value="Brand">Voiture</option>
            <option value="Club">Club</option>
            <option value="Event">Event</option>
            <option value="Collector">Collector</option>
            <option value="Designer">Designer</option>
          </select>
          <label>Critère de recherche</label>
        </div>
      </div>
      <div id="idNumberDiv"  class="row">
        <div class="input-field col s12 m6">
          <select id="selCrit">
            <option value="0" disabled selected>Choisir un critère</option>
            <option value="engine">Moteur</option>
            <option value="gearbox">Boite</option>
            <option value="frame">Châssis</option>
            <option value="identification">Enchère</option>
          </select>
          <label>Critère d'identification</label>
        </div>
        <div  class="nav-wrapper ">
          <form >
            <div class="input-field col s12 m6 ">
              <input id="search" type="search" class="validate ">
              <label class="label-icon" for="search"><i class="material-icons">search</i></label>
              <i id="close" class="material-icons">close</i>
            </div>
          </form>
        </div>
      </div>
      <div class="row">
        <div id="primary" class=""></div>
        <div id="secondary" class=""></div>
      </div>
      <input type="hidden" id="urlAjax" class="form-control" value="{{path('search')}}"/>
    </div>
  </div>
  </div>

  <div class="row">
      <div class="card" id='results'>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
  <script type="text/javascript" src="{{ asset('js/search.js') }}"></script>
{% endblock %}
